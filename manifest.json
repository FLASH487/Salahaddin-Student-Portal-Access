{
  "manifest_version": 3,
  "name": "Salahaddin University Portal Access",
  "version": "1.0.0",
  "description": "Quick access to Salahaddin University official systems, website, and media pages. Developed by Mustafa Masood.",

  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Salahaddin University Access",
    "default_icon": {
      "16": "icons/icon_16.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    }
  },

  "permissions": ["activeTab"],

  "author": "Mustafa Masood",
  "homepage_url": "https://su.edu.krd/",

  "browser_specific_settings": {
    "gecko": {
      "id": "salahaddin-extension@mustafamasood",
      "strict_min_version": "109.0"
    }
  }
}
